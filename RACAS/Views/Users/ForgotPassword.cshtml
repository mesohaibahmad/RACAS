<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log in</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/dist/css/AdminLTE.css">
    <link href="~/scripts/toastr.css" rel="stylesheet" />
    <link href="~/scripts/validationEngine.jquery.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/plugins/iCheck/square/blue.css">
    <link rel="stylesheet" href="~/plugins/sweetalert2/sweetalert2.min.css">
    <link rel="icon" type="image/x-icon" href="~/images/racas_favicon.ico">
</head>
<body class="hold-transition login-page">
    <div class="login-box" id="loginapp">
        <div class="login-logo">
            <img src="~/dist/img/kacnd-logo.png" style="width:250px" />
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Enter your email address</p>

            <form id="loginform">
                <!-- Prevent default form submission -->
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Email" @@keyup.enter="login" v-model="Email">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                
                <div class="row">
                    <div class="col-xs-8">
                        <a href="@Url.Action("Index", "UserLogin")" style="cursor:pointer">Login</a>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="button" class="btn btn-primary btn-block btn-flat" v-on:click="login($event)">Send Email</button>
                    </div>

                    <!-- /.col -->
                </div>
            </form>

            @*<a href="#">I forgot my password</a><br>*@
        </div>
    </div>
    <script src="~/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/plugins/iCheck/icheck.min.js"></script>
    <script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>

    <script src="~/scripts/jquery.validationEngine.js"></script>
    <script src="~/scripts/jquery.validationEngine-en.js"></script>
    <script src="~/scripts/toastr.js"></script>
    <script src="~/js/jquery.common.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>

    <script>
        var objCommon = new Common();
        $(document).ready(function () {
            var app = new Vue({
                el: '#loginapp',
                data: {
                    Email: "",
                    Password: ""
                },
                methods: {
                    login($event) {
                        if (!objCommon.Validate("#loginform"))
                            return;

                        var param = {
                            Email: this.Email
                        }
                        objCommon.AjaxCall("/UserLogin/SendEmail", JSON.stringify(param), "POST", true, function (response) {

                            Swal.fire({
                                title: "Success!",
                                text: "Email as been sent to your given email address!",
                                icon: "success"
                            });


                            window.location.href = '@Url.Action("Index", "UserLogin")';
                        }, $event==null?"": $event.currentTarget);
                    },
                    async logout() {
                        // Logout logic can be implemented here
                    }
                }
            })
        })
    </script>

    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>

