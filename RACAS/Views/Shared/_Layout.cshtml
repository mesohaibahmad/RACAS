@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using RACAS.Model
@using RACAS.Controllers
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<HomeController> Localizer
@inject IHttpContextAccessor HttpContextAccessor


@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    string returnUrl = ViewContext.HttpContext.Request.Path + ViewContext.HttpContext.Request.QueryString;

    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
        .ToList();

    List<MenuViewModel> menuList = (List<MenuViewModel>)ViewData["UserRoleMenu"];
    var distinctModules = menuList.GroupBy(m => m.ModuleName).Select(g => g.First()).ToList();
    string FirstName = "";
    string LastName = "";
    string UserId = "";
    string UserTypeId = "";
    if (string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("UserId")))
    {
        Context.Response.Redirect("/UserLogin/Login");
    }
    else
    {
        FirstName = HttpContextAccessor.HttpContext.Session.GetString("FirstName");
        LastName = HttpContextAccessor.HttpContext.Session.GetString("LastName");
        UserId = HttpContextAccessor.HttpContext.Session.GetString("UserId");
        UserTypeId = HttpContextAccessor.HttpContext.Session.GetString("UserTypeId");
    }

}


