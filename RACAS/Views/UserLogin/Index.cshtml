<body class="hold-transition login-page">
    <div class="login-box" id="loginapp">
        <div class="login-logo">
            <img src="~/dist/img/my-logo.png" style="width:280px" />
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form id="loginform">
                <!-- Prevent default form submission -->
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="UserName" @@keyup.enter="login" v-model="UserName">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" @@keyup.enter="login" v-model="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <a href="@Url.Action("ForgotPassword", "Users")" style="cursor:pointer">Forgot my password</a>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat" v-on:click="login($event)">Sign In</button>
                    </div>

                    <!-- /.col -->
                </div>
            </form>

