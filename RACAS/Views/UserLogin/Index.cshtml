    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script>
        let lastInputEvent = null;

        // Track clicks
        document.addEventListener('click', (e) => {
            lastInputEvent = e;
        }, true);

        // Track Enter key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                lastInputEvent = e;
            }
        }, true);
    </script>

    <script>
        var objCommon = new Common();
        $(document).ready(function () {
            var app = new Vue({
                el: '#loginapp',
                data: {
                    UserName: "",
                    Password: ""
                },
                methods: {
                    login($event) {

                        if (!objCommon.Validate("#loginform"))
                            return;


                        var param = {
                            UserName: this.UserName,
                            Password: this.Password
                        }




                        objCommon.AjaxCall("/UserLogin/LoginUser", JSON.stringify(param), "POST", true, function (response) {
                            if (response.success != false) {
                                Swal.fire({
                                    title: "Success!",
                                    text: "You are logged in successfully!",
                                    icon: "success"
                                });

                                window.location.href = '@Url.Action("Requests", "Payments")';
                            }
                            else {
                                Swal.fire({
                                    title: "Login Failed!",
                                    text: response.message,
                                    icon: "error"
                                });
                            }
                        }, $event == null ? "" : $event.currentTarget);
                    },
                    async logout() {
                        // Logout logic can be implemented here
                    }
                }
            })
        })
    </script>

    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });

    </script>
